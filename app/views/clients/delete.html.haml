
.client.show

= form_for(:client, :url => {:action => "destroy", id: @client.id}) do |f|
  %p Are you sure you want to permanently delete this client?
  %p.reference-name 
    = @client.name

  = link_to("Back", {action: 'list'}, class: 'btn btn-medium')
  / %i.icon.icon-arrow-left
  / Back
  = submit_tag("Delete Client", class: "btn btn-medium btn-danger")
